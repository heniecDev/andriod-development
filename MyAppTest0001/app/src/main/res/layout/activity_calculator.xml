        android:text="6"
        android:background="@drawable/round_button"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_rowWeight="0.2"
        ></Button>
    <Button
        android:text="-"
        android:background="@drawable/round_button02"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_rowWeight="0.2"
        ></Button>
    <Button
        android:text="1"
        android:background="@drawable/round_button"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_rowWeight="0.2"
