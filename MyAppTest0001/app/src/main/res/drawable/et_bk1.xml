<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--边框-->
    <stroke
        android:width="0dp"
        android:color="@color/white"/>
    <!--填充的颜色-->
    <solid android:color="#E6E6FA"/>
    <!--设置按钮的四个角为弧形-->
    <corners android:radius="0dip"/>
    <padding
        android:bottom="3dp"
        android:left="3dp"
        android:right="5dp"
        android:top="3dp"/>

</shape>