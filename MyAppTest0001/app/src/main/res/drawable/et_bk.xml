<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--边框-->
    <stroke
        android:width="2dp"
        android:color="@color/black"/>
    <!--填充的颜色-->
    <solid android:color="#6495ED"/>
    <!--设置按钮的四个角为弧形-->
    <corners android:radius="40dip"/>
    <padding
        android:bottom="3dp"
        android:left="3dp"
        android:right="5dp"
        android:top="3dp"/>

</shape>